<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/itemView_book_cardView"
        android:layout_width="110dp"
        android:layout_height="190dp"
        android:layout_margin="8dp"
        android:foreground="?android:attr/selectableItemBackground"
        cardview:cardCornerRadius="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/itemView_book_image"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="#ECECEC"
                android:scaleType="centerCrop"
                cardview:layout_constraintBottom_toTopOf="@id/itemView_book_title"
                cardview:layout_constraintEnd_toEndOf="parent"
                cardview:layout_constraintHorizontal_bias="0.0"
                cardview:layout_constraintStart_toStartOf="parent"
                cardview:srcCompat="@drawable/temp_cover_1" />

            <TextView
                android:id="@+id/itemView_book_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F4F4F4"
                android:gravity="center_horizontal"
                android:minHeight="30dp"
                android:text="Book Title"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="13sp"
                cardview:layout_constraintBottom_toBottomOf="parent"
                cardview:layout_constraintEnd_toEndOf="@+id/itemView_book_image"
                cardview:layout_constraintHeight_percent="0.5" />

            <ImageView
                android:id="@+id/itemView_book_bookmark_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                cardview:layout_constraintEnd_toEndOf="@id/itemView_book_image"
                cardview:layout_constraintTop_toTopOf="@id/itemView_book_image"
                cardview:srcCompat="@drawable/ic_bookmark_red"
                android:contentDescription="TODO" />

            <TextView
                android:id="@+id/itemView_book_bookmark_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="13sp"
                cardview:layout_constraintEnd_toEndOf="@id/itemView_book_bookmark_icon"
                cardview:layout_constraintStart_toStartOf="@+id/itemView_book_bookmark_icon"
                cardview:layout_constraintTop_toTopOf="@id/itemView_book_bookmark_icon" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
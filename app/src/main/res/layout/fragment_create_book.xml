<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_manual_add_book"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="55dp"
    android:gravity="center">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/fragment_manual_add_book_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:tag="AddBookManualFragment">

        <LinearLayout
            android:id="@+id/manual_add_book_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="64dp">

            <ImageView
                android:id="@+id/manual_add_book_cover_image"
                android:layout_width="109dp"
                android:layout_height="159dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:contentDescription="@string/book_image_hint"
                app:srcCompat="@drawable/book_cover_placeholder" />

            <TextView
                android:id="@+id/manual_add_book_title_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:text="@string/book_title_label"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/manual_add_book_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:hint="@string/book_title_hint"
                android:importantForAutofill="no"
                android:inputType="textCapSentences"
                android:text=""
                android:textSize="24sp" />

            <TextView
                android:id="@+id/manual_add_book_authors_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:text="@string/book_author_label"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/manual_add_book_authors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="8dp"
                android:hint="@string/book_author_hint"
                android:importantForAutofill="no"
                android:inputType="textCapSentences"
                android:text=""
                android:textSize="18sp" />

            <TextView
                android:id="@+id/manual_add_book_genres_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:text="@string/book_genre_label"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/manual_add_book_genres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="8dp"
                android:hint="@string/book_genre_hint"
                android:importantForAutofill="no"
                android:inputType="textCapSentences"
                android:text=""
                android:textSize="18sp" />

            <TextView
                android:id="@+id/manual_add_book_year_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:text="@string/book_year_label"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/manual_add_book_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="8dp"
                android:hint="@string/book_year_hint"
                android:importantForAutofill="no"
                android:inputType="textCapSentences"
                android:text=""
                android:textSize="18sp" />

            <TextView
                android:id="@+id/manual_add_book_language_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:text="@string/book_language_label"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/manual_add_book_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="8dp"
                android:hint="@string/book_language_hint"
                android:importantForAutofill="no"
                android:inputType="textCapSentences"
                android:text=""
                android:textSize="18sp" />

            <TextView
                android:id="@+id/manual_add_book_pages_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:text="@string/book_pages_label"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/manual_add_book_pages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="10dp"
                android:hint="@string/book_pages_hint"
                android:importantForAutofill="no"
                android:inputType="textCapSentences"
                android:text=""
                android:textSize="18sp" />

            <TextView
                android:id="@+id/manual_add_book_summary_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:text="@string/book_summary_label"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/manual_add_book_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="30dp"
                android:hint="@string/book_summary_hint"
                android:importantForAutofill="no"
                android:inputType="textMultiLine|text"
                android:text=""
                android:textSize="18sp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/editDialog_imageView"
        android:layout_width="126dp"
        android:layout_height="187dp"
        android:layout_alignParentStart="true"
        android:onClick="onClickImageView"
        app:srcCompat="@drawable/temp_cover_1" />

    <EditText
        android:id="@+id/editDialog_bookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/editDialog_imageView"
        android:layout_alignParentEnd="false"
        android:layout_toEndOf="@id/editDialog_imageView"
        android:drawableStart="@drawable/ic_bookmark"
        android:inputType="number"
        android:paddingLeft="10dp"
        android:singleLine="true" />

    <ImageButton
        android:id="@+id/editDialog_editBookButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="#00FFFFFF"
        android:onClick="onClickEdit"
        android:padding="5dp"
        android:src="@android:drawable/ic_menu_edit" />

    <EditText
        android:id="@+id/editDialog_bookTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editDialog_imageView"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:enabled="false"
        android:hint="@string/book_title"
        android:importantForAutofill="no"
        android:inputType="textNoSuggestions|text|textCapSentences"
        android:singleLine="true" />

    <EditText
        android:id="@+id/editDialog_bookAuthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editDialog_bookTitle"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:enabled="false"
        android:fontFamily="sans-serif"
        android:hint="@string/book_author"
        android:importantForAutofill="no"
        android:inputType="textNoSuggestions|textPersonName|textCapSentences"
        android:singleLine="true" />

    <EditText
        android:id="@+id/editDialog_bookGenre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editDialog_bookAuthor"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:enabled="false"
        android:fontFamily="sans-serif"
        android:hint="@string/book_genre"
        android:importantForAutofill="no"
        android:inputType="text|textCapSentences"
        android:singleLine="true" />

    <EditText
        android:id="@+id/editDialog_bookImageURL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editDialog_bookGenre"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif"
        android:hint="@string/book_img_url"
        android:importantForAutofill="no"
        android:inputType="textUri" />

    <Button
        android:id="@+id/editDialog_okButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editDialog_bookImageURL"
        android:layout_centerInParent="true"
        android:onClick="onClickOK"
        android:text="@string/button_ok" />

</RelativeLayout>

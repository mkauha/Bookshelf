<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/editBookLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:padding="0dp">

    <ImageView
        android:id="@+id/editDialog_imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#222222"
        android:foregroundGravity="center"
        android:maxHeight="350dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/temp_cover_1" />

    <EditText
        android:id="@+id/editDialog_bookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:cursorVisible="false"
        android:drawableStart="@drawable/ic_bookmark_red"
        android:importantForAutofill="no"
        android:inputType="number"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@android:color/primary_text_dark"
        app:layout_constraintBottom_toBottomOf="@+id/editDialog_imageView"
        app:layout_constraintStart_toStartOf="@id/editDialog_imageView" />

    <ImageButton
        android:id="@+id/editDialog_editBookButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="#00FFFFFF"
        android:onClick="onClickEdit"
        android:padding="5dp"
        android:src="@android:drawable/ic_menu_edit"
        app:layout_constraintBottom_toBottomOf="@+id/editDialog_imageView"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editDialog_bookTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="@string/book_title"
        android:importantForAutofill="no"
        android:inputType="textNoSuggestions|text|textCapSentences"
        android:lines="1"
        android:scrollHorizontally="true"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editDialog_imageView" />

    <EditText
        android:id="@+id/editDialog_bookAuthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:hint="@string/book_author"
        android:importantForAutofill="no"
        android:inputType="textNoSuggestions|textPersonName|textCapSentences"
        android:singleLine="true"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editDialog_bookTitle" />

    <EditText
        android:id="@+id/editDialog_bookGenre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:hint="@string/book_genre"
        android:importantForAutofill="no"
        android:inputType="text|textCapSentences"
        android:singleLine="true"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editDialog_bookAuthor" />

    <EditText
        android:id="@+id/editDialog_bookImageURL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif"
        android:hint="@string/book_img_url"
        android:importantForAutofill="no"
        android:inputType="textUri"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editDialog_bookGenre" />

    <Button
        android:id="@+id/editDialog_okButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="16dp"
        android:onClick="onClickOK"
        android:text="@string/button_ok"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editDialog_bookImageURL"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
